{
  "compilerOptions": {
    "outDir": "./dist/backend",
    "rootDir": "./backend",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "lib": ["ES2020"],
    "typeRoots": [
      "./node_modules/@types",
      "./backend/types"
    ]
  },
  "include": [
    "backend/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}